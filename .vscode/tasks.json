{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build project",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-I",
                "C:/SFML-2.5.1/include",
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}\\Build\\${fileBasenameNoExtension}.exe",
                "-v",
                "-L",
                "C:/SFML-2.5.1/lib",
                "-l",
                "freetype",
                "-l",
                "sfml-system",
                "-l",
                "opengl32",
                "-l",
                "sfml-window",
                "-l",
                "sfml-graphics",
                "-l",
                "winmm",
                "-l",
                "gdi32"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}